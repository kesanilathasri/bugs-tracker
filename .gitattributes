# Ensure consistent line endings across platforms
# Default: store and checkout as LF
* text=auto eol=lf

# Keep CRLF for Windows scripts
*.bat text eol=crlf
*.cmd text eol=crlf
*.ps1 text eol=crlf

# Keep LF for Unix shell scripts
*.sh text eol=lf

# Explicit LF for common text files
*.js text eol=lf
*.jsx text eol=lf
*.ts text eol=lf
*.tsx text eol=lf
*.json text eol=lf
*.cjs text eol=lf
*.mjs text eol=lf
*.css text eol=lf
*.scss text eol=lf
*.sass text eol=lf
*.html text eol=lf
*.md text eol=lf
*.yml text eol=lf
*.yaml text eol=lf
*.env text eol=lf
*.gitignore text eol=lf
*.gitattributes text eol=lf

# Java (if added)
*.java text eol=lf

# Treat these as binary (no EOL conversions)
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.webp binary
*.bmp binary
*.pdf binary
*.zip binary
*.gz binary
*.7z binary
*.rar binary
*.eot binary
*.ttf binary
*.otf binary
*.woff binary
*.woff2 binary
*.jar binary
*.class binary
*.xlsx binary
*.xls binary
